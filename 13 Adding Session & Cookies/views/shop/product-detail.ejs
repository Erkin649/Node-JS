<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main class="centered">
        <h1><%= product.title %></h1>
        <hr>
        <div class="image">
            <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
        </div>
        <h2>$ <%= product.price %></h2>
        <p><%= product.description %></p>
        <%- include('../includes/add-to-cart.ejs') %>
        <div class="product-feedback">
            <ul>
                <li>@John Adams: Very awesome product. Just hit like!</li>
            </ul>
        </div>
        <div class="feedback-form">
            <form>
                <input class="feedback-btn" type="text" placeholder="Your feedback">
                <button type="submit" class="feedback-btn send-feedback">Send</button>
            </form>
        </div>
    </main>
<%- include('../includes/end.ejs') %>